{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit",
    "source.fixAll": "explicit"
  },
  "editor.tabSize": 2,
  "prettier.singleQuote": true,
  "prettier.semi": false,
  "files.exclude": {
    "**/.next": true,
    "**/node_modules": true
  }
}
